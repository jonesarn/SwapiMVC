@model ResultViewModel<PeopleViewModel>
<h1 class="Text-center"> People Index</h1>
@if (Model.Results?.Count() > 0)
{
    <div class="d-flex flex-row flex-wrap">
        @foreach (var person in Model.Results)
        {
            <div class="item">
                <h4>@person.Name</h4>
                <div class="item-traits">
                    <p>Mass: @person.Mass</p>
                    <p>Height: @person.Height</p>
                    <p>Born: @person.BirthYear</p>
                </div>
            </div>
        }
    </div>
    <div>
        @if (Model.Previous is not null)
        {
            <a asp-action="Index" asp-route-page="@Model.Previous"></a>
        }
        @if (Model.Next is not null)
        {
            <a asp-action="Index" asp-route-page="@Model.Next"></a>
        }
    </div>
}
else
{
    <p>There are no results for this.</p>
}
@{
    ViewData["Title"] = "People";
}
